<!DOCTYPE html>
<html>
<head>
  <title>StudentManager</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>
  <%= render "pages/navbar" %>
  <% if admin_signed_in? %>
  <div class="container main">
    <div class="row">
      <div class="col-2 sidebar">
        <%= render "pages/sidebar" %>
      </div>
      <div class="col-10">
        <div class="content">
          <%= yield %>
        </div>
      </div>
    </div>
  </div>
  <% else %>
  <div class="content">
    <%= yield %>
  </div>
  <% end %>

</body>
</html>
